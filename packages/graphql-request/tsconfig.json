{
  "compilerOptions": {
    "lib": ["es2018"],
    "module": "esnext",
    "target": "es5",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./build",
    "declaration": true
  },
  "include": ["src/**/*"]
}
