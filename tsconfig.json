{
  "compilerOptions": {
    "lib": ["es2018", "DOM"],
    "module": "ES2020",
    "target": "es2015",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "skipLibCheck": true
  }
}
